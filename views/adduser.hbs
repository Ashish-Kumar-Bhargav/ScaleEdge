                                <div class="form-group">
                                    <label for="">Description</label>
                                    <textarea name="" id="" cols="30" rows="10" style="width:95%; height: 130px; padding: 15px;">Computer Description</textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                           <a href="#" id="submit-btn" class=" btn btn-submit">Submit</a>
